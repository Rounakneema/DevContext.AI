# ============================================================================
# AWS Cognito Configuration
# ============================================================================
# Get these values from AWS Cognito Console
REACT_APP_COGNITO_USER_POOL_ID=your-user-pool-id
REACT_APP_COGNITO_CLIENT_ID=your-client-id
REACT_APP_COGNITO_REGION=ap-southeast-1

# ============================================================================
# API Gateway Endpoint (Backend)
# ============================================================================
# Get this from AWS API Gateway Console or SAM deploy output
REACT_APP_API_ENDPOINT=https://your-api-id.execute-api.ap-southeast-1.amazonaws.com/prod

# ============================================================================
# Frontend Configuration
# ============================================================================
# Port for local development (default: 3000)
PORT=3000

# Disable WebSocket for React DevTools in production
REACT_APP_DISABLE_WEBSOCKET=true

# ============================================================================
# Feature Flags
# ============================================================================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=false

# ============================================================================
# Admin Dashboard Configuration
# ============================================================================
# Password for accessing /admin/cost-analytics dashboard
# IMPORTANT: Change this to a strong password in production!
# This page is NOT accessible to regular users - only admins with this password
REACT_APP_ADMIN_PASSWORD=DevContext2026!Admin
